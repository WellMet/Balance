<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAcc2"
    tools:context="com.ua.ganoncannon.balance.SpeedSlide">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/header5"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            android:textSize="32dp"
            tools:layout_editor_absoluteX="117dp"
            tools:layout_editor_absoluteY="42dp" />

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="First Goals - How Fast!"
            android:textColor="@android:color/background_light"
            android:textSize="32dp"
            tools:layout_editor_absoluteX="117dp"
            tools:layout_editor_absoluteY="42dp" />

        <TextView
            android:id="@+id/header7"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            android:textSize="32dp"
            tools:layout_editor_absoluteX="117dp"
            tools:layout_editor_absoluteY="42dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="How fast?"
            android:textColor="@android:color/background_light"
            android:textSize="26dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="308dp" />

        <SeekBar
            android:id="@+id/sSlider"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:max="10"
            android:progress="5"
            tools:layout_editor_absoluteX="57dp"
            tools:layout_editor_absoluteY="179dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Choose between +50%/-50%"
            android:textColor="@android:color/background_light"
            android:textSize="26dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="308dp" />

    </LinearLayout>

</FrameLayout>
